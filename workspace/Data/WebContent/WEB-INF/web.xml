<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>BuyerProfile</display-name>
  <welcome-file-list>
    <welcome-file>BuyerProfiles.jsp</welcome-file>
  </welcome-file-list>

	<security-role>
        <role-name>BuyerProfileAdmin</role-name>
    </security-role>

	<security-role>
        <role-name>BuyerProfileReader</role-name>
    </security-role>

	<security-constraint>
 		<web-resource-collection>
  			<web-resource-name>BuyerProfile</web-resource-name>
  			<url-pattern>*</url-pattern>
 		</web-resource-collection>

		<auth-constraint>
 			<role-name>BuyerProfileAdmin</role-name>
 			<role-name>BuyerProfileReader</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>

</web-app>